@model List<QuickLearnLMS.Models.StudentDashboardViewModel>

@{
    ViewBag.Title = "Student Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h2 class="mb-4 text-center text-primary fw-bold"><i class="bi bi-person-circle me-2"></i>Welcome, Student</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">You are not enrolled in any courses yet.</div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow rounded-4 h-100">
                        <div class="card-header bg-secondary text-white rounded-top-4">
                            <h5 class="mb-0">@item.Course.Title</h5>
                        </div>
                        <div class="card-body d-flex flex-column justify-content-between">
                            <p><strong>Course ID:</strong> @item.Course.CourseID</p>

                            <div class="d-grid gap-2 mt-auto">
                                <a class="btn btn-outline-primary" asp-action="CourseMaterials" asp-route-id="@item.Course.CourseID">
                                    <i class="bi bi-file-earmark-text"></i> View Materials
                                </a>

                                @if (item.Assignment != null)
                                {
                                    <a class="btn btn-outline-success" asp-action="SubmitAssignment" asp-route-assignmentId="@item.Assignment.AssignmentID">
                                        <i class="bi bi-upload"></i> Submit Assignment
                                    </a>
                                }

                                @if (item.Quiz != null)
                                {
                                    <a class="btn btn-outline-info" asp-action="AttemptQuiz" asp-route-quizId="@item.Quiz.QuizID">
                                        <i class="bi bi-question-circle"></i> Attempt Quiz
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

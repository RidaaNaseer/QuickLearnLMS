@{
    ViewBag.Title = "Submit Assignment";
}

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h3 class="mb-4 text-primary">Submit Assignment</h3>

        <form method="post" enctype="multipart/form-data">
            <input type="hidden" name="assignmentId" value="@ViewBag.AssignmentID" />

            <div class="mb-3">
                <label class="form-label">Upload File</label>
                <input type="file" name="uploadedFile" class="form-control" required />
                <small class="form-text text-muted">Accepted formats: PDF, DOC, DOCX</small>
            </div>

            <button type="submit" class="btn btn-success w-100">Submit Assignment</button>
        </form>
    </div>
</div>

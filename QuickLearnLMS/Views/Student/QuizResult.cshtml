@{
    ViewBag.Title = "Quiz Result";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h3 class="text-primary mb-3">Quiz Result</h3>

        @if (Model != null)
        {
            <p class="fs-5">
                <strong>Score:</strong>
                <span class="badge bg-success">@Model.Score</span>
            </p>
        }
        else
        {
            <div class="alert alert-warning">No result found for this quiz.</div>
        }

        <a asp-action="Dashboard" class="btn btn-outline-secondary mt-3">Back to Dashboard</a>
    </div>
</div>

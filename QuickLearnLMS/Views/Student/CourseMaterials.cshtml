@using System.Linq
@model List<QuickLearnLMS.Models.Material>
@{
    ViewBag.Title = "Course Materials";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h3 class="text-primary fw-bold mb-4"><i class="bi bi-archive me-2"></i>Course Materials</h3>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">No materials have been uploaded for this course yet.</div>
    }
    else
    {
        <ul class="list-group mb-4">
            @foreach (var item in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-file-earmark-text me-2 text-secondary"></i>@System.IO.Path.GetFileName(item.FilePath)</span>
                    <a class="btn btn-sm btn-outline-primary" href="@item.FilePath" download>
                        <i class="bi bi-download"></i> Download
                    </a>
                </li>
            }
        </ul>
    }

    <a asp-action="Dashboard" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

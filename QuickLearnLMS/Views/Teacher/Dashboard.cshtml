@{
    ViewBag.Title = "Teacher Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-info text-white rounded-top-4">
            <h3 class="mb-0"><i class="bi bi-person-workspace me-2"></i>Welcome, Teacher</h3>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6 col-lg-3">
                    <a href="/Teacher/MyCourses?teacherId=1" class="btn btn-outline-primary w-100 py-3 rounded-3 shadow-sm">
                        <i class="bi bi-journal-bookmark me-2"></i>My Courses
                    </a>
                </div>
                <div class="col-md-6 col-lg-3">
                    <a href="/Teacher/UploadMaterial" class="btn btn-outline-success w-100 py-3 rounded-3 shadow-sm">
                        <i class="bi bi-upload me-2"></i>Upload Material
                    </a>
                </div>
                <div class="col-md-6 col-lg-3">
                    <a href="/Teacher/AddAssignment" class="btn btn-outline-warning w-100 py-3 rounded-3 shadow-sm">
                        <i class="bi bi-journal-plus me-2"></i>Add Assignment
                    </a>
                </div>
                <div class="col-md-6 col-lg-3">
                    <a href="/Teacher/CreateQuiz" class="btn btn-outline-danger w-100 py-3 rounded-3 shadow-sm">
                        <i class="bi bi-ui-checks-grid me-2"></i>Create Quiz
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

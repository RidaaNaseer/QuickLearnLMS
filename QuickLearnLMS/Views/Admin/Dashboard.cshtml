@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5">
    <h2 class="mb-4 fw-bold text-primary">Welcome, Admin</h2>

    <div class="row g-4">
        <!-- Card 1: Add User -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body d-flex flex-column justify-content-between text-center">
                    <i class="bi bi-person-plus display-4 text-success mb-3"></i>
                    <h5 class="card-title">Add User</h5>
                    <a href="/Admin/AddUser" class="btn btn-success mt-3">Go</a>
                </div>
            </div>
        </div>

        <!-- Card 2: Add Course -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body d-flex flex-column justify-content-between text-center">
                    <i class="bi bi-journal-plus display-4 text-primary mb-3"></i>
                    <h5 class="card-title">Add Course</h5>
                    <a href="/Admin/AddCourse" class="btn btn-primary mt-3">Go</a>
                </div>
            </div>
        </div>

        <!-- Card 3: Assign Course -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body d-flex flex-column justify-content-between text-center">
                    <i class="bi bi-link-45deg display-4 text-warning mb-3"></i>
                    <h5 class="card-title">Assign Course</h5>
                    <a href="/Admin/AssignCourse" class="btn btn-warning mt-3 text-white">Go</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Secondary actions -->
    <div class="row g-4 mt-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-people display-4 text-dark mb-3"></i>
                    <h5 class="card-title">Manage Users</h5>
                    <a href="/Admin/ManageUsers" class="btn btn-outline-dark mt-2">Go</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-book display-4 text-dark mb-3"></i>
                    <h5 class="card-title">Manage Courses</h5>
                    <a href="/Admin/ManageCourses" class="btn btn-outline-dark mt-2">Go</a>
                </div>
            </div>
        </div>
    </div>
</div>
